{
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": ["alphabets", "numbers", "punctuation"]
      },
      "ja-no-space-around-parentheses": false,
      "ja-space-around-link": {
        "before": true,
        "after": true
      }
    },
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "no-mix-dearu-desumasu": {
        "preferInHeader": "ですます",
        "preferInBody": "ですます",
        "preferInList": "ですます"
      },
      "sentence-length": {
        "max": 120
      },
      "max-kanji-continuous-len": {
        "max": 8
      },
      "ja-no-mixed-period": {
        "periodMark": "。",
        "allowPeriodMarks": ["\"", "."],
        "allowEmojiAtEnd": false,
        "forceAppendPeriod": false
      }
    },
    "ja-no-orthographic-variants": true,
    "@textlint-rule/require-header-id": true,
    "@textlint-ja/no-synonyms": {
      "allows": [
        "=",
        "アプリ",
        "アプリケーション",
        "イラスト",
        "イラストレーション",
        "以降",
        "運用",
        "エディション",
        "行う",
        "完結",
        "完了",
        "記憶",
        "規則",
        "検査",
        "今後",
        "作成",
        "使用",
        "終了",
        "済む",
        "即時",
        "チェック",
        "作る",
        "名前",
        "パラメーター",
        "開く",
        "変数",
        "名",
        "メソッド",
        "メモリ",
        "呼び出し",
        "呼び出す",
        "利用",
        "ルール",
        "ログ"
      ],
