{
  "openapi": "3.1.0",
  "info": {
    "description": "Microsoft Entra External ID を利用したユーザー認証機能を提供するサンプルアプリケーションです。",
    "title": "Microsoft Entra External ID ユーザー認証",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "description": "認証済みユーザのユーザ ID を取得する API です。",
      "name": "Users"
    },
    {
      "description": "認証不要でサーバーの現在時刻を取得します。",
      "name": "ServerTime"
    }
  ],
  "paths": {
    "/api/servertime": {
      "get": {
        "description": "サーバーの現在時刻を取得します。",
        "operationId": "getServerTime",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServerTimeResponse"
                }
              }
            },
            "description": "成功。"
          }
        },
        "summary": "サーバーの現在時刻を取得します。",
        "tags": [
          "ServerTime"
        ]
      }
    },
    "/api/users": {
      "get": {
        "description": "ログインに成功したユーザ ID を取得します。",
        "operationId": "getUser",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            },
            "description": "成功。"
          },
          "401": {
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            },
            "description": "未認証エラー。"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "ログインに成功したユーザ ID を取得します。",
        "tags": [
          "Users"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "ProblemDetail": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string"
          },
          "instance": {
            "type": "string",
            "format": "uri"
          },
          "properties": {
            "type": "object",
            "additionalProperties": {}
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "ServerTimeResponse": {
        "type": "object",
        "properties": {
          "serverTime": {
            "type": "string"
          }
        },
        "required": [
          "serverTime"
        ]
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          }
        },
        "required": [
          "userId"
        ]
      }
    },
    "securitySchemes": {
      "Bearer": {
        "bearerFormat": "JWT",
        "scheme": "bearer",
        "type": "http"
      }
    }
  }
}