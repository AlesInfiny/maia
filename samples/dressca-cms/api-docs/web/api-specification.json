  "tags": [
    {
      "description": "Monitor and interact",
      "externalDocs": {
        "description": "Spring Boot Actuator Web API Documentation",
        "url": "https://docs.spring.io/spring-boot/docs/current/actuator-api/html/"
      },
      "name": "Actuator"
    },
    {
      "description": "お知らせメッセージの情報にアクセスする API です。",
      "name": "Announcement"
    }
  ],
  "paths": {
    "/announcements": {
      "get": {
        "description": "お知らせメッセージ管理画面を表示します。",
        "operationId": "index",
        "parameters": [
          {
            "in": "query",
            "name": "pageNumber",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "pageSize",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "画面表示成功"
          }
        },
        "summary": "お知らせメッセージ管理画面を表示します。",
        "tags": [
          "Announcement"
        ]
      }
    },
    "/announcements/create": {
      "get": {
        "description": "お知らせメッセージ登録画面を表示します。",
        "operationId": "create",
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "画面表示成功"
          }
        },
        "summary": "お知らせメッセージ登録画面を表示します。",
        "tags": [
          "Announcement"
        ]
      },
      "post": {
        "description": "お知らせメッセージ登録画面上で言語別お知らせメッセージを追加します。",
        "operationId": "addLanguageToCreate",
        "parameters": [
          {
            "in": "query",
            "name": "viewModel",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/AnnouncementCreateViewModel"
            }
          },
          {
            "in": "query",
            "name": "deleteLanguageFromCreate",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "バリデーションエラー時、登録画面を表示します。"
          },
          "302": {
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "追加成功時、登録画面へリダイレクトします。"
          }
        },
        "summary": "お知らせメッセージ登録画面上で言語別お知らせメッセージを追加します。",
        "tags": [
          "Announcement"
        ]
      }
    },
    "/api": {
      "get": {
        "operationId": "links",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "$ref": "#/components/schemas/Link"
                    }
                  }
                }
              },
              "application/vnd.spring-boot.actuator.v2+json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "$ref": "#/components/schemas/Link"
                    }
                  }
                }
              },
              "application/vnd.spring-boot.actuator.v3+json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "$ref": "#/components/schemas/Link"
                    }
                  }
                }
              }
            },
            "description": "OK"
          }
        },
        "summary": "Actuator root web endpoint",
        "tags": [
          "Actuator"
        ]
      }
    },
    "/api/health": {
      "get": {
        "operationId": "health",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              },
              "application/vnd.spring-boot.actuator.v2+json": {
                "schema": {
                  "type": "object"
                }
              },
              "application/vnd.spring-boot.actuator.v3+json": {
                "schema": {
                  "type": "object"
                }
              }
            },
            "description": "OK"
          }
        },
        "summary": "Actuator web endpoint \u0027health\u0027",
        "tags": [
          "Actuator"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "AnnouncementContentViewModel": {
        "type": "object",
        "properties": {
          "languageCode": {
            "type": "string"
          },
          "linkUrl": {
            "type": "string",
            "maxLength": 1024,
            "minLength": 0
          },
          "message": {
            "type": "string",
            "maxLength": 512,
            "minLength": 0
          },
          "title": {
            "type": "string",
            "maxLength": 256,
            "minLength": 0
          }
        },
        "required": [
          "languageCode",
          "message",
          "title"
        ]
      },
      "AnnouncementCreateViewModel": {
        "type": "object",
        "properties": {
          "announcement": {
            "$ref": "#/components/schemas/AnnouncementViewModel"
          },
          "contents": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AnnouncementContentViewModel"
            }
          }
        }
      },
      "AnnouncementViewModel": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "maxLength": 128,
            "minLength": 0
          },
          "displayPriority": {
            "type": "integer",
            "format": "int32"
          },
          "expireDate": {
            "type": "string",
            "format": "date"
          },
          "expireTime": {
            "type": "string"
          },
          "postDate": {
            "type": "string",
            "format": "date"
          },
          "postTime": {
            "type": "string"
          }
        },
        "required": [
          "category",
          "displayPriority",
          "postDate",
          "postTime"
        ]
      },
      "Link": {
        "type": "object",
        "properties": {
          "href": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        }
      }
    }
  }
}